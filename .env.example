# Human-facing name for the admin panel and service.
SITE_NAME="Daria Attestation Service"

# Port the HTTP server listens on.
PORT=8080

# Default admin password; the admin is forced to change it at first login.
DEFAULT_ADMIN_PASSWORD="admin"

# Public URL (scheme + host + optional path) when running behind a reverse proxy.
# Leave blank if the service is accessed directly.
BASE_URL=""

# Enforce the maximum allowed age of attestation timestamps (seconds).
ATTESTATION_TIMEOUT=600

# Secret used to sign session tokens for the admin UI.
SESSION_SECRET="change-me-session-secret"

# Set to true to require Remote Key Provisioning attestation extensions (CBOR provisioning info).
# Reference: https://source.android.com/docs/security/features/remote-key-provisioning/attestation
ENFORCE_REMOTE_KEY_PROVISION=false

# Set to true to require API key verification on /api/v1/verify requests.
# When false, requests may omit apiKey and no lookup is performed.
ENFORCE_API_KEY=false
